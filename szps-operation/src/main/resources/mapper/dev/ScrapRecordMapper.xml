        <result property="updateBy"      column="update_by"      />
        <result property="updateTime"    column="update_time"    />
		<result property="remark"    column="remark"    />
		<result property="delFlag"    column="delFlag"    />		
    </resultMap> 

	<sql id="selectVo">
        select *
        from dev_scrap_record r
    </sql>	
	
	<!-- 查询条件 -->
	<sql id="sqlwhereSearch">
		<where>
			<if test=" id !=null">
				and id = #{id}
			</if>
			<if test=" applyDate !=null and applyDate != ''">
				and applyDate = #{applyDate}
			</if>
			<if test=" deptId !=null and deptId != ''">
				and deptId = #{deptId}
			</if>
			<if test=" devName != null and devName != ''">
				AND devName  like concat(concat('%',#{devName}),'%')
			</if>
			<if test=" applyDept != null and applyDept != ''">
				AND applyDept  like concat(concat('%',#{applyDept}),'%')
			</if>
		</where>
	</sql>
	

    
    <select id="select" parameterType="ScrapRecord" resultMap="result">
        <include refid="selectVo"/>
        <include refid="sqlwhereSearch"/>
    </select>
    
    <select id="selectList" parameterType="ScrapRecord" resultMap="result">
        <include refid="selectVo"/>
        where  delFlag = '1'
        <if test=" deptId != null and deptId != 0">
			AND deptId = #{deptId}
		</if>
		<if test=" applyDate != null and applyDate != ''">
			AND applyDate = #{applyDate}
		</if>
		<if test=" devName != null and devName != ''">
				AND devName  like concat(concat('%',#{devName}),'%')
		</if>
		<if test=" applyDept != null and applyDept != ''">
				AND applyDept  like concat(concat('%',#{applyDept}),'%')
		</if>
		order by r.id, r.applyDate
    </select>
      <select id="selectById" parameterType="Long" resultMap="result">
		<include refid="selectVo"/>
		where r.id = #{id}
	</select>
	
    <delete id="deleteById" parameterType="Long">
		update dev_scrap_record set DELFLAG = '2' where id = #{id}
	</delete>
	 <delete id="deleteByIds" parameterType="Long">
 		delete from dev_scrap_record where id in
 		<foreach collection="array" item="id" open="(" separator="," close=")">
 			#{id}
        </foreach> 
 	</delete>
    
    <update id="update" parameterType="ScrapRecord">
 		update dev_scrap_record
 		<set>
			<if test=" deptId != null and deptId != ''">deptId = #{deptId},</if>
			<if test=" devName != null and devName != ''">devName = #{devName},</if>
			<if test=" devSpecs != null and devSpecs != ''">devSpecs = #{devSpecs},</if>
			<if test=" manufacturer != null and manufacturer != ''">manufacturer = #{manufacturer},</if>
			<if test=" devNumber != null and devNumber != ''">devNumber = #{devNumber},</if>
			<if test=" buyDate != null and buyDate != ''">buyDate = #{buyDate},</if>
			<if test=" price != null and price != ''">price = #{price},</if>
			<if test=" applyScrapDate != null and applyScrapDate != ''">applyScrapDate = #{applyScrapDate},</if>
			<if test=" useDept != null and useDept != ''">useDept = #{useDept},</if>
			<if test=" scrapReason != null and scrapReason != ''">scrapReason = #{scrapReason},</if>
			<if test=" applyDept != null and applyDept != ''">applyDept = #{applyDept},</if>
			<if test=" applyDate != null and applyDate != ''">applyDate = #{applyDate},</if>
			<if test=" verifier != null and verifier != ''">verifier = #{verifier},</if>
			<if test=" verifyDate != null and verifyDate != ''">verifyDate = #{verifyDate},</if>
			<if test=" approver != null and approver != ''">approver = #{approver},</if>
			<if test=" approveDate != null and approveDate != ''">approveDate = #{approveDate},</if>
			<if test=" delFlag != null and delFlag!= ''">delFlag = #{delFlag},</if>
			<if test=" remark != null and remark != ''">remark = #{remark},</if>
 			<if test=" updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
 			update_time = sysdate
 		</set>
 		where id = #{id}
	</update>
	  

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.szps.web.mapper.dev.PumpstationMaintenanceMapper">
 
	<resultMap type="PumpstationMaintenance" id="result">
		<id     property="id"    column="id"    />
		<result     property="optime"   column="optime"   />
		<result     property="devname"   column="devname"   />
		<result     property="optype"   column="optype"   />
		<result     property="opdetails"   column="opdetails"   />
		<result     property="replaceparts"   column="replaceparts"   />
		<result     property="operator"   column="operator"   />

        <result property="createBy"      column="create_by"      />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"      column="update_by"      />
        <result property="updateTime"    column="update_time"    />
		<result property="remark"    column="remark"    />
		<result     property="dept_id"   column="dept_id"   />
    </resultMap> 

	<sql id="selectVo">
        select *
        from DEV_PUMPSTATION_MT r
    </sql>	
	
	<!-- 查询条件 -->
	<sql id="sqlwhereSearch">
		<where>
			<if test=" id !=null">
				and id = #{id}
			</if>
			<if test=" devname != null and devname != ''">
				AND devname  like concat(concat('%',#{devname}),'%')
			</if>
			<if test=" optype !=null and optype != ''">
				and optype = #{optype}
			</if>
		</where>
	</sql>
	

    
    <select id="select" parameterType="PumpstationMaintenance" resultMap="result">
        <include refid="selectVo"/>
        <include refid="sqlwhereSearch"/>
    </select>
    
    <select id="selectList" parameterType="PumpstationMaintenance" resultMap="result">
        <include refid="selectVo"/>
        where  1 = 1
        <if test=" id != null and id != 0">
			AND id = #{id}
		</if>
		<if test=" devname != null and devname != ''">
				AND devname  like concat(concat('%',#{devname}),'%')
		</if>
		<if test=" optype !=null and optype != ''">
				and optype = #{optype}
			</if>
		<!-- 数据范围过滤 -->
		${params.dataScope}	
		order by r.id
    </select>
      <select id="selectByName" parameterType="Long" resultMap="result">
		<include refid="selectVo"/>
		where  1 = 1
		<if test=" devname != null and devname != ''">
				AND devname  like concat(concat('%',#{devname}),'%')
		</if>
	</select>
	
	<select id="selectById" parameterType="Long" resultMap="result">
		<include refid="selectVo"/>
		where r.id = #{id}
	</select>
	
    <delete id="deleteById" parameterType="Long">
		delete from DEV_PUMPSTATION_MT where id = #{id}
	</delete>
	 <delete id="deleteByIds" parameterType="Long">
 		delete from DEV_PUMPSTATION_MT where id in
 		<foreach collection="array" item="id" open="(" separator="," close=")">
 			#{id}
        </foreach> 
 	</delete>
    
    <update id="update" parameterType="PumpstationMaintenance">
 		update DEV_PUMPSTATION_MT
 		<set>
			<if test=" optime != null">optime = #{optime},</if>
			<if test=" devname != null">devname = #{devname},</if>
			<if test=" optype != null">optype = #{optype},</if>
			<if test=" opdetails != null">opdetails = #{opdetails},</if>
			<if test=" replaceparts != null">replaceparts = #{replaceparts},</if>
			<if test=" operator != null">operator = #{operator},</if>
			
			<if test=" remark != null">remark = #{remark},</if>
 			<if test=" updateBy != null">update_by = #{updateBy},</if>
 			update_time = sysdate
 		</set>
 		where id = #{id}
	</update>
	  
    <insert id="insert" parameterType="PumpstationMaintenance">
    	 <selectKey keyProperty="id" resultType="long" order="BEFORE">
			SELECT SEQ_DEV_PUMPSTATION_MT.NEXTVAL as id FROM DUAL
		</selectKey>
    
		INSERT INTO DEV_PUMPSTATION_MT(
			<if test=" id != null and id!= 0">id,</if>
<if test=" optime != null">optime,</if>
<if test=" devname != null">devname,</if>
<if test=" optype != null">optype,</if>
<if test=" opdetails != null">opdetails,</if>
<if test=" replaceparts != null">replaceparts,</if>
<if test=" operator != null">operator,</if>


			
			<if test=" remark != null">REMARK,</if>
			<if test=" createBy != null">create_by,</if>
			<if test=" dept_id != null ">dept_id,</if>
			create_time
		) VALUES (
			<if test=" id != null and id!= 0">#{id},</if>
<if test=" optime != null">#{optime},</if>
<if test=" devname != null">#{devname},</if>
<if test=" optype != null">#{optype},</if>
<if test=" opdetails != null">#{opdetails},</if>
<if test=" replaceparts != null">#{replaceparts},</if>
<if test=" operator != null">#{operator},</if>



			
			<if test=" remark != null">#{remark},</if>
			<if test=" createBy != null">#{createBy},</if>
			<if test=" dept_id != null">#{dept_id},</if>
			sysdate			
		)
	</insert>
    
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.szps.web.mapper.employee.CompanyMapper">
	<resultMap type="Company" id="companyResult">
		<id     property="company_id"       column="COMPANY_ID"        />
		<result property="company_name"     column="COMPANY_NAME"      />
		<result property="address"           column="ADDRESS"           />
		<result property="representative"   column="REPRESENTATIVE"    />
		<result property="business_scope"   column="BUSINESS_SCOPE"    />
		<result property="registered_capital" column="REGISTERED_CAPITAL"/>
		<result property="qualification" column="QUALIFICATION" />
		<result property="pipe_project" column="PIPE_PROJECT"          />
		<result property="project_scope" column="PROJECT_SCOPE"        />
		<result property="pipe_stop_time" column="PIPE_STOP_TIME" />
		<result property="project_company_name" column="PROJECT_COMPANY_NAME" />
		<result property="project_company_address" column="PROJECT_COMPANY_ADDRESS" />
		<result property="project_people" column="PROJECT_PEOPLE" />
		<result property="project_header" column="PROJECT_HEADER" />
		<result property="telephone" column="TELEPHONE" />
	</resultMap>
	
	<!-- 查询全部公司名称和代码 -->
	<select id="selectAllCompanyName" parameterType="Company" resultMap="companyResult">
		select COMPANY_ID,COMPANY_NAME,ADDRESS,REPRESENTATIVE,BUSINESS_SCOPE,
		REGISTERED_CAPITAL,QUALIFICATION,PIPE_PROJECT,PROJECT_SCOPE,
		to_char(PIPE_STOP_TIME,'yyyy-mm-dd') as PIPE_STOP_TIME,PROJECT_COMPANY_NAME,
		PROJECT_COMPANY_ADDRESS,PROJECT_PEOPLE,PROJECT_HEADER,TELEPHONE from EMPLOYEE_T_COMPANY
	</select>
	
	<!-- 查询全部公司信息 -->
	<select id="selectAllCompany" parameterType="Company" resultMap="companyResult">
		select COMPANY_ID,COMPANY_NAME,ADDRESS,REPRESENTATIVE,BUSINESS_SCOPE,
		REGISTERED_CAPITAL,QUALIFICATION,PIPE_PROJECT,PROJECT_SCOPE,
		to_char(PIPE_STOP_TIME,'yyyy-mm-dd') as PIPE_STOP_TIME,PROJECT_COMPANY_NAME,
		PROJECT_COMPANY_ADDRESS,PROJECT_PEOPLE,PROJECT_HEADER,TELEPHONE from EMPLOYEE_T_COMPANY
		<if test="company_name != null and company_name != ''">
			where COMPANY_NAME = #{company_name}
		</if>
	</select>
	
</mapper>